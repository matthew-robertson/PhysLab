package utils.graphing;


public class ScaleBounds
{
	public int left;
	public int right;
	public int top;
	public int bottom;
	
	public ScaleBounds()
	{
		left = 0;
		right = 0;
		top = 0;
		bottom = 0;
	}
	
	public ScaleBounds(int l, int r, int t, int b)
	{
		left = l;
		right = r;
		top = t;
		bottom = b;
	}
	
	public void setBounds(int l, int r, int t, int b)
	{
		left = l;
		right = r;
		top = t;
		bottom = b;
	}
}
