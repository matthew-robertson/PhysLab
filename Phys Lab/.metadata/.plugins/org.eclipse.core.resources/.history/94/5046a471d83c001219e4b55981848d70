	private GraphableObject graphableObject;
		
	public double roundToTwoDecimals(double d)
	{
		return ((double)Math.round(d * 100) / 100);
	}
	
	public String makeNumberSafe(double d)
	{
		if((d <= 100.00D && d >= 1.00D) || (d <= -1.00D && d >= -100.00D))
		{
			return ""+roundToTwoDecimals(d);
		}
		else if(d < 1.00D && d > -1.00D)
		{
			String num = ""+d;
			
			if(num.getLength() > 4)
			{
			
			}
			else
			{
				
			}
			String str = ;
		}
		else //D > 100.00D (3 digits)
		{
			
		}
		
		return str;
	}
	
	public void onDraw(Canvas canvas) 
	{
		canvas.drawColor(Color.BLACK);
		Paint paint = new Paint();
		paint.setColor(Color.WHITE);
		
		
		//Positive only
		canvas.drawLine(20, 20, 20, this.getHeight() - 20, paint);
		canvas.drawLine(20, this.getHeight() - 20, this.getWidth() - 20, this.getHeight() - 20 , paint);
		//If minvalue < 0... for the Y anyway.
		
		canvas.drawText(makeNumberSafe(150000), 20, this.getHeight() - 20, paint);
		canvas.drawText(makeNumberSafe(175000), this.getWidth() / 2, this.getHeight() - 20, paint);
		canvas.drawText(makeNumberSafe(200000), this.getWidth() - 20, this.getHeight() - 20, paint);
		//canvas.drawTextOnPath("200000", new Path(),this.getWidth() - 20, this.getHeight() - 20, paint);
		
        //Bitmap _scratch = BitmapFactory.decodeResource(getResources(), R.drawable.icon);
        //canvas.drawColor(Color.BLUE);
        //canvas.drawLine(10, 10, 100, 100, new Paint());
        //canvas.drawBitmap(_scratch, 10, 10, null);
    }
