package utils.graphing;

import android.graphics.RectF;


public class ScaleBounds extends RectF
{
	public int left;
	public int right;
	public int top;
	public int bottom;
	public int leftPivotPoint;
	public int rightPivotPoint;
	
	public ScaleBounds()
	{
		left = 0;
		right = 0;
		top = 0;
		bottom = 0;
		leftPivotPoint = 0;
		rightPivotPoint = 0;
	}

	/**
	 * Does not set other variables
	 * @param l
	 * @param r
	 * @param t
	 * @param b
	 */
	public ScaleBounds(int l, int r, int t, int b)
	{
		left = l;
		right = r;
		top = t;
		bottom = b;
		leftPivotPoint = 0;
		rightPivotPoint = 0;
	}
	
	public ScaleBounds(int l, int r, int t, int b, int lPP, int rPP)
	{
		left = l;
		right = r;
		top = t;
		bottom = b;
		leftPivotPoint = lPP;
		rightPivotPoint = rPP;
	}
	
	/**
	 * Does not auto-set other variables
	 * @param l
	 * @param r
	 * @param t
	 * @param b
	 */
	public void setBounds(int l, int r, int t, int b)
	{
		left = l;
		right = r;
		top = t;
		bottom = b;
	}
	
	public void setBounds(int l, int r, int t, int b, int lPP, int rPP)
	{
		left = l;
		right = r;
		top = t;
		bottom = b;
		leftPivotPoint = lPP;
		rightPivotPoint = rPP;
	}
	
	public void recalculateBoundsByPivotPoints()
	{
		
	}
	
	public boolean isInLeftClickBounds()
	{
		return true;
	}
	
	public boolean isInRightClickBounds()
	{
		return true;
	}
}
